{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/CleanArchitecture.API/CleanArchitecture.API.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/CleanArchitecture.API/CleanArchitecture.API.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "--configuration",
        "Release"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/CleanArchitecture.API/CleanArchitecture.API.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-seeders",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/CleanArchitecture.API/CleanArchitecture.API.csproj",
        "--launch-profile",
        "cli",
        "--seed",
        "all"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "run-migrations",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "update",
        "--project",
        "${workspaceFolder}/src/CleanArchitecture.Infrastructure",
        "--startup-project",
        "${workspaceFolder}/src/CleanArchitecture.API"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ]
}
